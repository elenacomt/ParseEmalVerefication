<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CADA2E"
    android:onClick="rootLayoutTapped"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="226dp"
        android:layout_height="77dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtEnterEmail"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:background="#E1685F"
        android:ems="10"
        android:hint="Please enter email"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="225dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:background="#CC3A3A"
        android:ems="10"
        android:hint="Please enter username"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEnterEmail" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="222dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:background="#D3493F"
        android:ems="10"
        android:hint="Please enter password"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtUserName" />

    <Button
        android:id="@+id/btnSingUp"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:background="#89B9DE"
        android:text="Sing UP"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:background="#76ACD7"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSingUp" />
</androidx.constraintlayout.widget.ConstraintLayout>

